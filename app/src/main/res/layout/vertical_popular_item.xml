<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="?colorPrimary"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/padding_standard"
        android:paddingTop="6dp"
        android:paddingEnd="@dimen/padding_standard"
        android:paddingBottom="6dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cover"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_oval="true"
            tools:src="@drawable/pop" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlayCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:maxLines="1"
            android:textColor="?android:textColor"
            android:textSize="@dimen/text_size_body1"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="999+" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSongName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/margin_standard"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?android:textColor"
            android:textSize="@dimen/text_size_body1"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tvPlayCount"
            app:layout_constraintStart_toEndOf="@id/cover"
            app:layout_constraintTop_toTopOf="@id/cover"
            tools:text="@string/app_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvArtistAlbumName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?android:textColor"
            android:textSize="@dimen/text_size_body2"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/cover"
            app:layout_constraintEnd_toStartOf="@id/tvPlayCount"
            app:layout_constraintStart_toEndOf="@id/cover"
            tools:text="@string/app_name" />

        <eu.gsottbauer.equalizerview.EqualizerView
            android:id="@+id/play_pause_music"
            android:layout_width="@dimen/icon_size_default"
            android:layout_height="@dimen/icon_size_default"
            android:src="@drawable/ic_play_circle_filled"
            android:tint="@color/white"
            android:visibility="gone"
            app:animationDuration="3500"
            app:barColor="?colorSecondary"
            app:barCount="4"
            app:layout_constraintBottom_toBottomOf="@id/cover"
            app:layout_constraintEnd_toEndOf="@id/cover"
            app:layout_constraintTop_toTopOf="@id/cover"
            app:layout_constraintStart_toStartOf="@id/cover"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>