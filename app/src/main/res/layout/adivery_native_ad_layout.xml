<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    app:cardElevation="10dp"
    app:cardBackgroundColor="?colorPrimary"
    app:cardCornerRadius="@dimen/radius_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adivery_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/padding_standard">

        <com.adivery.sdk.AdiveryNativeAdMediaView
            android:id="@+id/adivery_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/adivery_call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/top_panel_background_color_center"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/adivery_image" />

        <TextView
            android:id="@+id/adivery_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:minLines="1"
            app:layout_constraintBottom_toBottomOf="@id/adivery_call_to_action"
            app:layout_constraintEnd_toStartOf="@id/adivery_call_to_action"
            app:layout_constraintStart_toEndOf="@id/adivery_icon"
            app:layout_constraintTop_toTopOf="@id/adivery_call_to_action" />

        <ImageView
            android:id="@id/adivery_icon"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:layout_margin="8dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@id/adivery_call_to_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/adivery_call_to_action"
            tools:src="@drawable/magnetic_icon" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>