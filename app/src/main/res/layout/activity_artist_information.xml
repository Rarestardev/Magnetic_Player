<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tvArtistName"
            type="String" />

        <variable
            name="tvArtistTrackSize"
            type="String" />

        <variable
            name="alertMsg"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:windowBackground"
        android:paddingBottom="@dimen/padding_standard"
        tools:context=".music_utils.artist.ArtistInformationActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/coverImageView"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/album_artist_cover_large_height"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_corner_radius_bottom_left="@dimen/album_artist_cover_left_corner_size"
                    tools:src="@drawable/ic_music" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="@string/no_cover"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="@{alertMsg ? View.VISIBLE : View.GONE, default = gone}"
                    app:layout_constraintBottom_toBottomOf="@id/coverImageView"
                    app:layout_constraintEnd_toEndOf="@id/coverImageView"
                    app:layout_constraintStart_toStartOf="@id/coverImageView"
                    app:layout_constraintTop_toTopOf="@id/coverImageView" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/back_activity"
                    android:layout_width="@dimen/icon_size_default"
                    android:layout_height="@dimen/icon_size_default"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_top_all_activity"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back"
                    android:tint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@id/coverImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/play_shuffle_artist_music"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="36dp"
                    android:clickable="true"
                    app:cardBackgroundColor="?colorSecondary"
                    app:cardCornerRadius="70dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:src="@drawable/ic_round_shuffle"
                        android:tint="@color/white" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_standard"
                android:padding="@dimen/padding_standard">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvArtistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@={tvArtistName}"
                    android:textColor="?android:textColor"
                    android:textSize="@dimen/text_size_body1"
                    android:textStyle="bold"
                    tools:text="@string/app_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvListSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@={tvArtistTrackSize}"
                    android:textColor="?android:textColor"
                    android:textSize="@dimen/text_size_body1"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap"
                    tools:text="( 55 )" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvListSize"
                android:layout_marginStart="@dimen/ads_banner_small_margin_start_end"
                android:layout_marginTop="@dimen/ads_banner_small_margin_top"
                android:layout_marginEnd="@dimen/ads_banner_small_margin_start_end"
                android:layout_marginBottom="@dimen/margin_standard"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:scrollbars="vertical"
                tools:itemCount="10"
                tools:listitem="@layout/artist_items_grid" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>
</layout>