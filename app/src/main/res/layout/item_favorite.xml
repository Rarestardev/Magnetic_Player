<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layoutDirection="ltr"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/albumArt"
            android:layout_width="@dimen/icon_size_extra_large"
            android:layout_height="@dimen/icon_size_extra_large"
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            tools:src="@drawable/ic_music" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/delete_favorite"
            app:layout_constraintStart_toEndOf="@id/albumArt"
            app:layout_constraintTop_toTopOf="@id/albumArt"
            tools:text="Music" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAlbumName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/albumArt"
            app:layout_constraintEnd_toStartOf="@id/delete_favorite"
            app:layout_constraintStart_toEndOf="@id/albumArt"
            tools:text="@string/app_name" />

        <eu.gsottbauer.equalizerview.EqualizerView
            android:id="@+id/is_playing_music"
            android:layout_width="@dimen/icon_size_default"
            android:layout_height="@dimen/icon_size_default"
            app:barColor="?colorSecondary"
            app:barCount="4"
            app:barWidth="6dp"
            app:layout_constraintBottom_toBottomOf="@id/albumArt"
            app:layout_constraintEnd_toEndOf="@+id/albumArt"
            app:layout_constraintTop_toTopOf="@id/albumArt"
            app:layout_constraintStart_toStartOf="@id/albumArt"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/delete_favorite"
            android:layout_width="@dimen/icon_size_default"
            android:layout_height="@dimen/icon_size_default"
            android:layout_marginEnd="@dimen/margin_standard"
            android:foreground="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            app:tint="?colorSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>