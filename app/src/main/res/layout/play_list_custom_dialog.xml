<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:paddingBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?colorPrimary"
        app:cardCornerRadius="@dimen/radius_size">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_standard">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close_dialog"
                android:layout_width="@dimen/icon_size_default"
                android:layout_height="@dimen/icon_size_default"
                android:foreground="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/add_playlist"
                android:layout_width="@dimen/icon_size_default"
                android:layout_height="@dimen/icon_size_default"
                android:foreground="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="@id/close_dialog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/close_dialog"
                app:tint="@color/top_panel_background_color_start" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPlaylist"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/new_playlist_layout"
                app:layout_constraintTop_toBottomOf="@id/close_dialog"
                tools:listitem="@layout/play_list_item" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/noPlaylist"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/noPlaylist"
                android:textAlignment="gravity"
                android:textSize="@dimen/text_size_body1"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@id/new_playlist_layout"
                app:layout_constraintTop_toBottomOf="@id/close_dialog" />

            <androidx.cardview.widget.CardView
                android:id="@+id/new_playlist_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="true"
                android:visibility="gone"
                app:cardBackgroundColor="?colorAccent"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edit_text_name_playlist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_between_elements"
                        android:layout_toStartOf="@id/save_playlist"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/play_list"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textAlignment="gravity"
                        android:textColorHint="?colorOnSecondary"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/save_playlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:text="@string/save_new_playlist"
                        android:textColor="?iconTint"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</ScrollView>