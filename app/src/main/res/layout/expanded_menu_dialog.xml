<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="?colorPrimary"
    app:cardCornerRadius="@dimen/radius_size"
    app:cardElevation="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_between_elements"
        android:layout_marginBottom="@dimen/margin_standard"
        android:orientation="vertical">

        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="?iconTint" />

        <com.adivery.sdk.AdiveryNativeAdView
            android:id="@+id/native_ad_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:adivery_native_ad_layout="@layout/adivery_native_ad_layout"
            app:placement_id="6fb89f6b-6d4c-46fe-af06-47849426eeeb" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/page_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/layout_sleep_timer"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:foreground="?selectableItemBackgroundBorderless">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/sleep_timer_icon"
                    android:layout_width="@dimen/icon_size_default"
                    android:layout_height="@dimen/icon_size_default"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:padding="3dp"
                    android:src="@drawable/icon_schedule"
                    android:tint="?iconTint" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sleep_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/sleep_timer_icon"
                    android:text="@string/sleep_timer"
                    android:textAlignment="gravity"
                    android:textColor="?android:textColor"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:maxLines="1"
                    android:textColor="?iconTint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:ignore="RelativeOverlap"
                    tools:text="00:00" />

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_show_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:text="@string/show_cover"
                android:textAlignment="gravity"
                android:textColor="?android:textColor"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_image"
                app:iconPadding="@dimen/padding_standard"
                app:iconTint="?iconTint"
                app:rippleColor="@color/music_item_color_night_mode" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:text="@string/share"
                android:textAlignment="gravity"
                android:textColor="?android:textColor"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_share"
                app:iconPadding="@dimen/padding_standard"
                app:iconTint="?iconTint"
                app:rippleColor="@color/music_item_color_night_mode" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_detail_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:backgroundTint="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:text="@string/details"
                android:textAlignment="gravity"
                android:textColor="?android:textColor"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_details"
                app:iconPadding="@dimen/padding_standard"
                app:iconTint="?iconTint"
                app:rippleColor="@color/music_item_color_night_mode" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/page_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back_to_page_one"
                android:layout_width="@dimen/icon_size_default"
                android:layout_height="@dimen/icon_size_default"
                android:layout_marginStart="12dp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:tint="?iconTint" />

            <ListView
                android:id="@+id/time_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/margin_between_elements"
                android:layout_marginEnd="12dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.adivery.sdk.AdiveryBannerAdView
            android:id="@+id/banner_ad"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ads_banner_small"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/ads_banner_small_margin_start_end"
            android:layout_marginTop="@dimen/ads_banner_small_margin_top"
            android:layout_marginEnd="@dimen/ads_banner_small_margin_start_end"
            android:visibility="gone"
            app:banner_size="banner" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>