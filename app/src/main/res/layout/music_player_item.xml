<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="60dp"
    android:layout_marginEnd="60dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="@dimen/music_cover"
        android:layout_height="@dimen/music_cover"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/cover_music"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_music"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="?colorSecondary"
                app:riv_border_width="1dp"
                app:riv_oval="true"
                tools:ignore="ImageContrastCheck" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/next_song_info_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_standard"
                android:layout_marginTop="48dp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/margin_standard"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/cover_music"
                app:layout_constraintStart_toStartOf="@id/cover_music"
                app:layout_constraintTop_toTopOf="@id/cover_music">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="12dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSongName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:background="@drawable/music_player_text_bg"
                    android:padding="4dp"
                    android:maxLines="1"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="@string/app_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:ellipsize="end"
                    android:background="@drawable/music_player_text_bg"
                    android:padding="4dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_body1"
                    android:textStyle="bold"
                    tools:text="@string/app_name" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_play_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="64dp"
                    android:backgroundTint="?colorSecondary"
                    android:clickable="true"
                    android:elevation="12dp"
                    android:text="@string/play"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_body2"
                    android:textStyle="bold"
                    app:cornerRadius="36dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="0.5dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>