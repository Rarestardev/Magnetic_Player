<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activities.MainActivity">

    <data>

        <variable
            name="isShowRecentList"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_panel_background"
            android:elevation="12dp"
            android:paddingTop="@dimen/margin_top_all_activity"
            android:paddingBottom="12dp">

            <RelativeLayout
                android:id="@+id/custom_app_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_app_bar"
                android:elevation="@dimen/elevation_app_bar"
                android:paddingStart="@dimen/padding_standard"
                android:paddingEnd="@dimen/padding_standard">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/moreSettings"
                    android:layout_width="@dimen/icon_size_default"
                    android:layout_height="@dimen/icon_size_default"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/white" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/appIcon"
                    android:layout_width="@dimen/icon_size_default"
                    android:layout_height="@dimen/icon_size_default"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/magnetic_icon"
                    app:riv_oval="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/appIcon"
                    android:fontFamily="serif-monospace"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_app_name"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/search_button"
                    android:layout_width="@dimen/icon_size_default"
                    android:layout_height="@dimen/icon_size_default"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:layout_toStartOf="@id/moreSettings"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_search"
                    app:tint="@color/white" />


            </RelativeLayout>

            <com.adivery.sdk.AdiveryBannerAdView
                android:id="@+id/banner_ad"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ads_banner_small"
                android:layout_below="@id/custom_app_bar"
                android:layout_marginStart="@dimen/ads_banner_small_margin_start_end"
                android:layout_marginTop="@dimen/ads_banner_small_margin_top"
                android:layout_marginEnd="@dimen/ads_banner_small_margin_start_end"
                app:banner_size="banner"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recentListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/banner_ad"
                android:layout_marginTop="6dp"
                android:visibility="@{isShowRecentList ? View.VISIBLE : View.GONE,default = gone}">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/recent_play"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_button"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/moreRecentList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/moreRecentList" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/moreRecentList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:text="@string/more"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RelativeOverlap" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recentListRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="true"
                    android:orientation="horizontal"
                    android:paddingStart="4dp"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/moreRecentList"
                    tools:ignore="RtlSymmetry"
                    tools:itemCount="1"
                    tools:listitem="@layout/popular_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/topPanel"
            android:layout_marginTop="2dp"
            android:background="@drawable/track_main_background"
            android:elevation="4dp"
            app:tabIndicatorAnimationDuration="2"
            app:tabIndicatorColor="@color/top_panel_background_color_end"
            app:tabIndicatorFullWidth="false"
            app:tabMode="auto"
            app:tabRippleColor="@color/top_panel_background_color_end"
            app:tabSelectedTextColor="?android:textColor"
            app:tabTextColor="?colorOnSecondary"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabLayout"
            android:layout_above="@id/viewStub"
            android:background="?colorPrimary" />

        <ViewStub
            android:id="@+id/viewStub"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:inflatedId="@+id/inflatedView"
            android:layout="@layout/music_player_ui" />

    </RelativeLayout>
</layout>