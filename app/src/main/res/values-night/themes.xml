    <style name="Theme.CustomThemeAlertDialog" parent="Theme.Material3.Dark.Dialog.Alert">
        <!--Background color-->
        <item name="android:background">@color/second_color_night_mode</item>

        <!--tittle color-->
        <item name="android:textColor">@color/white</item>

        <!--text color of message-->
        <item name="android:textColorPrimary">@color/white</item>

        <!--text color of buttons-->
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="TransparentDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="TransparentDialogFragment" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <color name="start_color">#000F0F0F</color>
    <color name="center_color">#800F0F0F</color>
    <color name="highlight_progress_color">#99525151</color>

